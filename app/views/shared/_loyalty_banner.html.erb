<section class="relative overflow-hidden">
  <div aria-hidden="true" class="absolute inset-0 -z-10 bg-gradient-to-br from-sky-100 via-slate-100 to-blue-100"></div>
  <div aria-hidden="true" class="absolute -top-24 -left-20 h-56 w-56 rounded-full bg-sky-200/50 blur-3xl"></div>
  <div aria-hidden="true" class="absolute -bottom-16 -right-16 h-72 w-72 rounded-full bg-cyan-200/50 blur-3xl"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid gap-10 md:grid-cols-[minmax(0,0.7fr)_minmax(0,0.3fr)] md:items-center">
      <div class="space-y-4 text-night">
        <span class="inline-flex items-center gap-2 rounded-full bg-white/70 px-4 py-1 text-[11px] font-semibold uppercase tracking-[0.35em] text-night/70">
          Join Our Club
        </span>
        <h2 class="text-3xl md:text-4xl font-semibold leading-tight">Join Our Club, Get 15% Off For Your Birthday</h2>
        <p class="text-sm md:text-base text-night/80 max-w-2xl">
          Stay in the loop with new arrivals, curated stories, and member-only perks delivered straight to your inbox.
        </p>
        <dl class="grid grid-cols-2 sm:grid-cols-4 gap-4 pt-2 text-sm text-night/80">
          <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
            <dt class="text-[11px] uppercase tracking-[0.35em] text-night/50">Members</dt>
            <dd class="mt-2 text-2xl font-semibold text-night">58K+</dd>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
            <dt class="text-[11px] uppercase tracking-[0.35em] text-night/50">Special drops</dt>
            <dd class="mt-2 text-2xl font-semibold text-night">Weekly</dd>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
            <dt class="text-[11px] uppercase tracking-[0.35em] text-night/50">Birthday boost</dt>
            <dd class="mt-2 text-2xl font-semibold text-night">15% Off</dd>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
            <dt class="text-[11px] uppercase tracking-[0.35em] text-night/50">Free shipping</dt>
            <dd class="mt-2 text-2xl font-semibold text-night">Nationwide</dd>
          </div>
        </dl>
      </div>
      <form class="w-full md:w-auto space-y-4 rounded-3xl bg-white/80 p-6 shadow-lg shadow-sky-200/40 backdrop-blur" action="#" method="post">
        <label for="loyalty-email" class="sr-only">Email address</label>
        <input
          id="loyalty-email"
          type="email"
          placeholder="Enter Email Address"
          class="w-full rounded-2xl border border-slate-200 bg-white px-5 py-3 text-sm text-night placeholder:text-night/50 shadow-sm focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-200 transition"
          required
        >
        <button
          type="submit"
          class="inline-flex w-full items-center justify-center gap-2 rounded-2xl bg-sky-500 px-5 py-3 text-sm font-semibold text-night shadow-md shadow-sky-200/70 transition hover:-translate-y-0.5 hover:bg-sky-400"
        >
          Subscribe
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="m9 5 7 7-7 7" />
          </svg>
        </button>
        <p class="text-xs text-night/60 text-center">
          No spam, just colourful perks and local surprises.
        </p>
      </form>
    </div>
  </div>
</section>
