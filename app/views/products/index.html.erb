<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <h1 class="text-3xl font-bold text-center mb-8">Browse All Products</h1>

  <% if @error.present? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded text-center">
      <%= @error %>
    </div>
  <% elsif @products.blank? %>
    <div class="text-gray-600 text-center">No products available at the moment.</div>
  <% else %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @products.each do |product| %>
        <div class="bg-white border border-gray-200 rounded-2xl shadow-sm hover:shadow-lg transition-shadow flex flex-col">
          <div class="p-4 flex-1 flex flex-col">
            <div class="h-48 flex items-center justify-center mb-4">
              <img src="<%= product["image"] %>" alt="<%= product["title"] %>" class="max-h-full object-contain">
            </div>
            <h2 class="font-semibold text-lg text-gray-900 mb-2 h-14 overflow-hidden"><%= product["title"] %></h2>
            <p class="text-gray-700 text-xl font-bold">$<%= number_with_precision(product["price"], precision: 2) %></p>
          </div>
          <div class="px-4 pb-4">
            <%= link_to "View Details", product_path(product["id"]), class: "inline-flex items-center justify-center w-full rounded-xl bg-blue-600 px-4 py-2 text-white font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
